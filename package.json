{
  "name": "proxy",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run clean-build && npm run transpile-ts && npm run copy-html",
    "clean-build": "rm -rf dist",
    "transpile-ts": "tsc",
    "copy-html": "copyfiles src/**/*.html dist",
    "start": "node dist/src/index.js",
    "dev": "nodemon src/index.ts",
    "format": "prettier --ignore-path .gitignore --write '**/*.{ts,js,json}'",
    "lint-staged": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write --"
    ],
    "*.{js,json}": [
      "prettier --write --"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-request-proxy": "^2.2.2",
    "typescript": "^3.7.5"
  },
  "devDependencies": {
    "copyfiles": "^2.2.0",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.7",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "ts-node": "^8.6.2"
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "none",
    "semi": false
  },
  "nodemonConfig": {
    "ext": "ts,html,json",
    "exec": "ts-node",
    "legacyWatch": true,
    "events": {
      "restart": "clear"
    }
  }
}

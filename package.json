{
  "name": "proxy",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run clean-build && npm run transpile-ts && npm run copy-html",
    "clean-build": "rm -rf dist",
    "transpile-ts": "tsc",
    "copy-html": "copyfiles src/**/*.html dist",
    "start": "node dist/src/index.js",
    "dev": "nodemon src/index.ts",
    "format": "prettier --ignore-path .gitignore --write '**/*.{ts,js,json}'",
    "lint-staged": "lint-staged",
    "lint": "eslint \"./src/**/*.ts\" --ext=\".ts\" --ignore-path .gitignore --color --max-warnings 0 --fix",
    "test": "jest --silent"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write --"
    ],
    "*.{js,json}": [
      "prettier --write --"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-request-proxy": "^2.2.2",
    "typescript": "^3.9.7"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@testing-library/dom": "^7.29.0",
    "@types/jest": "^26.0.19",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "babel-jest": "^26.6.3",
    "copyfiles": "^2.2.0",
    "eslint": "^7.15.0",
    "eslint-plugin-jest": "^24.1.3",
    "html-loader-jest": "^0.2.1",
    "husky": "^4.2.1",
    "jest": "^26.6.3",
    "lint-staged": "^10.0.7",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "supertest": "^6.0.1",
    "ts-node": "^8.6.2"
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "none",
    "semi": false
  },
  "nodemonConfig": {
    "ext": "ts,html,json",
    "exec": "ts-node",
    "legacyWatch": true,
    "events": {
      "restart": "clear"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(js|ts)$": "babel-jest",
      "^.+\\.html?$": "html-loader-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts?$"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "jest"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "env": {
      "node": true,
      "jest": true,
      "es6": true
    },
    "rules": {
      "no-console": "off"
    }
  }
}
